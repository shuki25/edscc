{% extends 'emails/email_base_min.html.twig' %}
{% block preview %}Forgotten password, password reset request{% endblock %}
{% block title %}Notification Alert{% endblock %}
{% block subtitle %}Password Reset Requested{% endblock %}
{% block body %}
    <p class="my-3">Dear Commander {{ user.commandername }},</p>
    <p class="my-3">You have requested to reset your password. Your temporary password is:</p>
    <div style="margin: 3px; padding: 5px; background-color: #17a2b8;"><code>{{ tmp_password }}</code></div>
    <p class="my-3">If you did not request a password request, please delete this email.</p>
    <p class="my-3">Sincerely,<br>Your Squadron Leader</p>
{% endblock %}
