<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>{% trans %}File Uploaded{% endtrans %}</th>
            <th>{% trans %}Size{% endtrans %}</th>
            <th>{% trans %}Type{% endtrans %}</th>
            <th>{% trans %}Status{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    {% for file in files %}
        <tr>
            <td>{{ file.original_name }}</td>
            <td>{{ file.size }}</td>
            <td>{{ file.type }}</td>
            <td>{% if file.accept == 1 %}<i class="fas fa-check text-green"></i>{% else %}<i
                        class="fas fa-times-circle text-red"></i>{% endif %} {{ file.status|trans }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>