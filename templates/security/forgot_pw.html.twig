{% extends 'security/base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <!-- iCheck -->
    <link rel="stylesheet" href="{{ asset('bundles/iCheck/square/blue.css') }}">
{% endblock %}
{% block body %}
<body class="hold-transition login-page">
<div class="login-box">
    <div class="login-logo">
        <b>ED:</b> Squadron Command Center
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">To reset your password, please enter your e-mail address registered with your account and an e-mail will be sent with further instructions.</p>

        <form action="{{ path('app_forgot_pw') }}" method="post">
            <div class="form-group has-feedback">
                <input type="email" class="form-control" placeholder="Email">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>

            <div class="row">
                <div class="col-xs-4"></div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <a href="{{ path('app_login') }}" type="submit" class="btn btn-default btn-block btn-flat">Cancel</a>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Send E-Mail</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->
{% endblock %}
{% block javascript %}
{{ parent() }}
<!-- iCheck -->
<script src="{{ asset('bundles/iCheck/icheck.min.js') }}"></script>
<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' /* optional */
        });
    });
</script>
{% endblock %}
