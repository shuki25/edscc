{% extends 'security/base.html.twig' %}
{% block class %} login-page{% endblock %}
{% block body %}
<div class="login-box">
    {% include 'security/logo.html.twig' %}
    <div class="login-box-body">
        <p class="login-box-msg">{% trans %}reset_password_instruction{% endtrans %}</p>

        <form action="{{ path('app_forgot_pw') }}" method="post">
            <div class="form-group has-feedback">
                <input type="hidden" name="_token" value="{{ csrf_token('forgot_password') }}">
                <input type="email" class="form-control" name="email" placeholder="Email">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>

            <div class="row">
                <div class="col-xs-4"></div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <a href="{{ path('app_login') }}" type="submit" class="btn btn-default btn-block btn-flat">Cancel</a>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Send E-Mail</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->
{% endblock %}
