{% extends 'security/base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/edscc.css') }}">
{% endblock %}
{% block class %} login-page{% endblock %}
{% block body %}
    <div class="login-box">
        <div class="login-box-header">
            {% include 'security/logo.html.twig' %}
        </div>
        <div class="login-box-body">
            <div class="login-box-msg">
                <p>{% trans %}Access Denied{% endtrans %}</p>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    <p>{{ message }}</p>
                    <p>{% trans %}You do not have permissions to access to this resource.{% endtrans %}</p>
                </div>
            </div>
            <div class="row text-center" style="padding-top: 15px;">
                <div class="col-md-12">
                    {% if app.token.authenticated %}
                        <a href="{{ path('dashboard') }}" class="btn btn-default">{% trans %}Return to Dashboard{% endtrans %}</a>
                    {% else %}
                        <a href="{{ path('app_logout') }}" class="btn btn-default">{% trans %}Return to Login Screen{% endtrans %}</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}