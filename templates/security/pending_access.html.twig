{% extends 'security/base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/edscc.css') }}">
{% endblock %}
{% block class %} login-page{% endblock %}
{% block body %}
    <div class="login-box">
        <div class="login-box-header">
            {% include 'security/logo.html.twig' %}
        </div>
        <div class="login-box-body">
            <div class="login-box-msg">
                <p>{% trans %}Pending Access{% endtrans %}</p>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h4><b>{% trans with {'%name%': app.user.squadron.name} %}Welcome to %name% squadron!{% endtrans %}</b></h4>
                    <p style="padding-top: 10px;">{% trans %}Your access is pending approval from the squadron leader.  Because you have joined the squadron that requires an approval from one of squadron leaders, you will receive an e-mail indicating your access has been granted as soon as you are approved.  If you have any questions, please contact your squadron leader in the game.{% endtrans %}</p>
                </div>
            </div>
            <div class="row text-center" style="padding-top: 15px;">
                <div class="col-md-12">
                    <a href="{{ path('app_logout') }}" class="btn btn-default">{% trans %}Return to Login Screen{% endtrans %}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}